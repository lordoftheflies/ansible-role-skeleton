    - name: Ubuntu
      versions:
        - xenial
        - bionic
    - name: Debian
      versions:
        - jessie
        - stretch
    - name: Centos
      versions:
        - 7
  galaxy_tags:
    - cherubits
    - {{ role_name }}
    - debian
    - ubuntu
    - centos

